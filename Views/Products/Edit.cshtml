@model NewProductVM
@using WebApplication3.Data.Enums;

@{
    ViewData["Title"] = "Produkt: edytuj";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Produkt: edytuj</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="PicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <img id="PicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Picture" class="control-label"></label>
                        <input asp-for="Picture" class="form-control" />
                        <span asp-validation-for="Picture" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductCategory" class="control-label"></label>
                        <select asp-for="ProductCategory" class="form-control" asp-items="Html.GetEnumSelectList<ProductCategory>()"></select>
                        <span asp-validation-for="ProductCategory" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ThemeId" class="control-label"></label>
                        <select asp-for="ThemeId" class="form-control" asp-items="ViewBag.ThemeId"></select>
                        <span asp-validation-for="ThemeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Zaktualizuj" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Przejdź do listy głównej</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $("#Picture").val();
        });
        $("#Picture").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}